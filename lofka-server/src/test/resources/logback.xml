<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="SOCKET" class="com.cvnavi.lofka.appender.logback.HttpAsyncAppender">
        <target>http://127.0.0.1:9500/</target>
        <applicationName>lofka_test/logback/async_http</applicationName>
        <interval>100</interval>
        <maxBufferSize>100</maxBufferSize>
    </appender>


    <root level="INFO">
        <appender-ref ref="SOCKET"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>